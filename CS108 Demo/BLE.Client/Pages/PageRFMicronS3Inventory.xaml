  <StackLayout Orientation="Vertical">

    <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" HorizontalOptions="Fill">

        <Grid ColumnSpacing="0" RowSpacing="0" BackgroundColor="#FFFFFF" HeightRequest="2000" WidthRequest="2000">
          <Grid.ColumnDefinitions> <!-- 55 COLUMNS -->
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
            <ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition /><ColumnDefinition />
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="0.125*" />
            <RowDefinition Height="0.145*" />
            <RowDefinition Height="0.13*" />  <!-- Row 2, Back/BackNeck -->
            <RowDefinition Height="0.10*" />  <!-- Row 3, Chest         -->
            <RowDefinition Height="0.10*" />  <!-- Row 4, Upper Arms    -->
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.125*" />  <!-- Row 6, Lower Arms and Abs -->
            <RowDefinition Height="0.125*" />
          </Grid.RowDefinitions>

          <!--Body Model--> <Image Grid.Row="1" Grid.Column="0" Grid.RowSpan="6" Grid.ColumnSpan="55" Aspect="Fill" Source="Assets/singletorso.jpg" />

          <!--  Chest   --> <Image Grid.Row="3" Grid.Column="23" Grid.ColumnSpan="9" VerticalOptions="Center" Aspect="AspectFit" Opacity="0.48" Source="{Binding Chest, StringFormat='Assets/\{0\}.png'}" />
          <!-- - - - -  --> <Label Grid.Row="3" Grid.Column="23" Grid.ColumnSpan="9" Text="{Binding ChestIn,   StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="Start" HorizontalOptions="Center" FontAttributes="Bold" />
          <!-- - - - -  --> <Label Grid.Row="3" Grid.Column="23" Grid.ColumnSpan="9" Text="{Binding ChestOut,  StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="End"   HorizontalOptions="Center" />

          <!-- - Back - --> <Image Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="9" VerticalOptions="Start" Aspect="AspectFit" Opacity="0.48" Source="{Binding Back, StringFormat='Assets/\{0\}.png'}" />
          <!-- - - - -  --> <Label Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="9" Text="{Binding BackIn_T,  StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="Start" HorizontalOptions="Center" FontAttributes="Bold" />
          <!--  - - - - --> <Label Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="9" Text="{Binding BackOut_T, StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="End"   HorizontalOptions="Center" />
          <!-- - - - -  --> <Label Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="9" Text="Back" VerticalOptions="End" HorizontalOptions="Center" />
          <!--  - - - - --> <Label Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="9" Text="{Binding BackWet}" VerticalOptions="Start"   HorizontalOptions="Center" />

          <!--Back Neck --> <Image Grid.Row="1" Grid.Column="41" Grid.ColumnSpan="9" VerticalOptions="Start" Aspect="AspectFit" Opacity="0.48" Source="{Binding BackNeck, StringFormat='Assets/\{0\}.png'}" />
