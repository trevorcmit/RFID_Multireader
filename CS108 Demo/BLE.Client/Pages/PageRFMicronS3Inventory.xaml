          <!--  - - - - --> <Label Grid.Row="2" Grid.Column="41" Grid.ColumnSpan="9" Text="{Binding BackNeckWet}" VerticalOptions="Start" HorizontalOptions="Center" />

          <!-- Abdomen  --> <Image Grid.Row="6" Grid.Column="19" Grid.ColumnSpan="9" Aspect="AspectFit" Opacity="0.48" Source="{Binding RightAb, StringFormat='Assets/\{0\}.png'}" />
          <!--  Right - --> <Label Grid.Row="6" Grid.Column="19" Grid.ColumnSpan="9" Text="{Binding RightAbIn_T,  StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="Start" HorizontalOptions="Center" FontAttributes="Bold" />
          <!--  - - - - --> <Label Grid.Row="6" Grid.Column="19" Grid.ColumnSpan="9" Text="{Binding RightAbOut_T, StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="End"   HorizontalOptions="Center" />
          <!--  - - - - --> <Label Grid.Row="7" Grid.Column="19" Grid.ColumnSpan="9" Text="{Binding RightAbWet}" VerticalOptions="Start" HorizontalOptions="Center" />
          <!-- Abdomen  --> <Image Grid.Row="6" Grid.Column="26" Grid.ColumnSpan="9" Aspect="AspectFit" Opacity="0.48" Source="{Binding LeftAb, StringFormat='Assets/\{0\}.png'}" />
          <!-- -Left -  --> <Label Grid.Row="6" Grid.Column="26" Grid.ColumnSpan="9" Text="{Binding LeftAbIn_T,  StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="Start" HorizontalOptions="Center" FontAttributes="Bold" />
          <!-- - - - -  --> <Label Grid.Row="6" Grid.Column="26" Grid.ColumnSpan="9" Text="{Binding LeftAbOut_T, StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="End"   HorizontalOptions="Center" />
          <!--  - - - - --> <Label Grid.Row="7" Grid.Column="26" Grid.ColumnSpan="9" Text="{Binding LeftAbWet}" VerticalOptions="Start" HorizontalOptions="Center" />

          <!-- Right Up --> <Image Grid.Row="4" Grid.Column="10" Grid.ColumnSpan="9" Aspect="AspectFit" Opacity="0.48" Source="{Binding RightUp, StringFormat='Assets/\{0\}.png'}" />
          <!-- Left Up  --> <Image Grid.Row="4" Grid.Column="37" Grid.ColumnSpan="9" Aspect="AspectFit" Opacity="0.48" Source="{Binding LeftUp,  StringFormat='Assets/\{0\}.png'}" />
          <!-- - - - -  --> <Label Grid.Row="4" Grid.Column="10" Grid.ColumnSpan="9" Text="{Binding RightUpIn_T, StringFormat='{0:F0}°/s'}" FontSize="Default" FontAttributes="Bold"  VerticalOptions="Start" HorizontalOptions="Center" />
          <!--  - - - - --> <Label Grid.Row="4" Grid.Column="37" Grid.ColumnSpan="9" Text="{Binding LeftUpIn_T,  StringFormat='{0:F0}°/s'}" FontSize="Default" FontAttributes="Bold"  VerticalOptions="Start" HorizontalOptions="Center" />
