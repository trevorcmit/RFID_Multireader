          <!--  - - - - --> <Label Grid.Row="1" Grid.Column="41" Grid.ColumnSpan="9" Text="{Binding BackNeckOut_T, StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="End"   HorizontalOptions="Center" />
