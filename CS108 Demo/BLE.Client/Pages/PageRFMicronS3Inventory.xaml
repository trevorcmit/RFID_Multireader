          <!--  - - - - --> <Label Grid.Row="5" Grid.Column="10" Grid.ColumnSpan="9" Text="{Binding RightUpWet}" VerticalOptions="Start" HorizontalOptions="Center" />
          <!--  - - - - --> <Label Grid.Row="5" Grid.Column="37" Grid.ColumnSpan="9" Text="{Binding LeftUpWet}" VerticalOptions="Start"  HorizontalOptions="Center" />

          <!--Right Low --> <Image Grid.Row="6" Grid.Column="5" Grid.ColumnSpan="9" Aspect="AspectFit" Opacity="0.48" Source="{Binding RightLow, StringFormat='Assets/\{0\}.png'}" />
          <!-- Left Low --> <Image Grid.Row="6" Grid.Column="41" Grid.ColumnSpan="9" Aspect="AspectFit" Opacity="0.48" Source="{Binding LeftLow,  StringFormat='Assets/\{0\}.png'}" />
          <!-- - - - -  --> <Label Grid.Row="6" Grid.Column="5" Grid.ColumnSpan="9" Text="{Binding RightLowIn_T, StringFormat='{0:F0}°/s'}" FontSize="Default" FontAttributes="Bold" VerticalOptions="Start" HorizontalOptions="Center" />
          <!--  - - - - --> <Label Grid.Row="6" Grid.Column="41" Grid.ColumnSpan="9" Text="{Binding LeftLowIn_T, StringFormat='{0:F0}°/s'}"  FontSize="Default" FontAttributes="Bold" VerticalOptions="Start" HorizontalOptions="Center" />
          <!-- - - - -  --> <Label Grid.Row="6" Grid.Column="5" Grid.ColumnSpan="9" Text="{Binding RightLowOut_T, StringFormat='{0:F0}°/s'}" FontSize="Default" VerticalOptions="End" HorizontalOptions="Center" />
          <!--  - - - - --> <Label Grid.Row="6" Grid.Column="41" Grid.ColumnSpan="9" Text="{Binding LeftLowOut_T, StringFormat='{0:F0}°/s'}"  FontSize="Default" VerticalOptions="End" HorizontalOptions="Center" />
          <!--  - - - - --> <Label Grid.Row="7" Grid.Column="5" Grid.ColumnSpan="9" Text="{Binding RightLowWet}" VerticalOptions="Start" HorizontalOptions="Center" />
          <!--  - - - - --> <Label Grid.Row="7" Grid.Column="41" Grid.ColumnSpan="9" Text="{Binding LeftLowWet}"  VerticalOptions="Start" HorizontalOptions="Center" />

        </Grid>

    </StackLayout>

    <!-- Bottom Inventory/Clear/Share Section --> 
    <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
      <Button Text="{Binding startInventoryButtonText}" Font="Large" CornerRadius="9" Command="{Binding OnStartInventoryButtonCommand}"/>
    </StackLayout>

  </StackLayout>

</pages:BasePage>
